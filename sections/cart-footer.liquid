{% endcomment %}
<style>
  .cart-footer {
    display: flex;
    margin-bottom: 76px;
    padding: 30px 0 27px;
    justify-content: space-around;
    background: #FFF7EC;
  }
  .cart-footer .footer-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 240px;
  }
  .footer-item img {
  }
  .footer-item .item-title {
  	font-size: 16px;
    line-height: 2;
    text-align: center;
  }
  .footer-item .item-content {
  	font-size: 12px;
    line-height: 2;
    text-align: center;
    color: #928FA5;
  }
</style>
<div class="cart-footer alifont">
  {% for block in section.blocks %}          
    {% if block.type =='footer_item' %}
    <div class="footer-item">
      <img src="{{block.settings.item_image | img_url: '68x' }}" alt="">
      <div class="item-title alifont_bold">{{block.settings.item_title}}</div>
      <div class="item-content">{{block.settings.item_content}}</div>
    </div>
    {% endif %}
  {% endfor %}
</div>
{% schema %}
  {
    "name": "购物车 - 脚部",
    "class":"cart-footer-section mm-page-limited",
    "settings": [
    ],
    "blocks": [
      {
        "type": "footer_item",
        "name": "展示单元",
        "settings": [
          {
            "type": "image_picker",
            "id": "item_image",
            "label": "单元图片"
          },
          {
            "type": "text",
            "id": "item_title",
            "label": "单元标题"
          },
          {
            "type": "text",
            "id": "item_content",
            "label": "单元内容"
          }
        ]
      }
    ]
  }
{% endschema %}