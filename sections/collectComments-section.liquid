	.block-collection .title{
      font-size: 1.5rem;
    }
    .block-collection .block-collection-items .product-card__name {
      font-weight: normal;
      line-height: 1.2rem;
      font-size:12px;
      
    }
    .block-collection .block-collection-items .product-card__regular-price{
  	font-size: 16px;
      }
    .product-card__price span {
      display:block;
