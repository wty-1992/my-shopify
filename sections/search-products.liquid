{% comment %}
** @name 搜索产品页面 **
** @author 王天宇 **
** @integrate 王天宇 **
{% endcomment %}
<style>
  .main-container-collection {
    margin: 0 auto 134px;
    padding-top: 56px;
    max-width: 1372px;
    width: 100%;
    color: #222;
    border-radius: 4px;
  }
  .main-container-collection .collection-header {
    text-align: center;
  }
  .main-container-collection .collection-header .header-title {
    height: 80px;
    line-height: 80px;
    font-size: 32px;
  }
  .main-container-collection .collection-header .header-count {
    height: 32px;
    line-height: 32px;
    font-size: 14px;
  }
  .main-container-collection .collection-content {
    padding-top: 28px;
    display: flex;
    width: 100%;
    flex-wrap: wrap;
  }
  .main-container-collection .swiper-slide {
    margin: 0 28px 28px 0;
    padding: 14px 14px;
    width: calc((100% - 84px) /4);
    box-shadow: 0 2 4;
    border-radius: 4px;
    background: #F6F6F9;
  }
  .main-container-collection .swiper-slide:nth-child(4n) {
    margin-right: 0;
  } 
  .swiper-slide .slide-link {
  	display: inline-block;
    width: 100%;
    height: 100%;
  }
  .swiper-slide img {
    width: 100%;
    margin-bottom: 14px;
  }
  .swiper-slide .slide-new {
    font-size: 14px;
    height: 32px;
    line-height: 32px;
    color: #FEB900;
  }
  .swiper-slide .slide-title {
    margin-bottom: 14px;
    height: 45px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    font-size: 16px;
    line-height: 1.5;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .swiper-slide .slide-price {
    margin-bottom: 13px;
  	height: 32px;
    line-height: 32px;
    font-size: 20px;
  }
  .main-container-collection .collection-footer {
    padding-top: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .collection-footer .footer-show {
    margin-bottom: 14px;
    height: 20px;
    line-height: 20px;
  	font-size: 14px;
  }
  .collection-footer .footer-more {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 200px;
  	height: 54px;
    line-height: 54px;
    font-size: 20px;
    border: 1px solid #eee;
    border-radius: 4px;
    cursor: pointer;
  }
  .footer-more span {}
  .footer-more img {}
  @media (max-width: 768px) {
    .main-container-collection {
      margin-bottom: 80px;
      padding: 50px 20px 0;
    }
    .main-container-collection .collection-header .header-title {
      height: 56px;
      line-height: 56px;
      font-size: 24px;
    }
    .main-container-collection .collection-content {
      justify-content: space-between;
    }
    .main-container-collection .swiper-slide {
      margin: 0 0 20px;
      padding-bottom: 0;
      width: calc((100% - 10px) /2);
    }
    .swiper-slide .slide-new {
      margin: 6px 0;
      height: 20px;
      line-height: 20px;
    }
    .swiper-slide .slide-title {
      margin-bottom: 14px;
      height: 72px;
      font-size: 13px;
      line-height: 24px;
      -webkit-line-clamp: 3;
    }
    .products-normal .swiper-slide {
      padding: 5px 5px 5px 0;
      background: #F6F6F9;
      box-shadow: 0 2 4;
      border-radius: 4px;
    }
    .swiper-slide img,
    .swiper-slide .slide-price {
      margin-bottom: 5px;
    }
  }
</style>
<div class="main-container-collection alifont">
  <div class="collection-header">
    <div class="header-title alifont_bold">Reuslt for '{{ search.terms | escape }}'</div>
    <div class="header-count">{{search.results_count}} results</div>
  </div>
  <div class="collection-content">
  {% if search.results %}
    {% for col_product in search.results %}
    <div class="swiper-slide">
      <a class="slide-link" href="{{col_product.url}}">
        <img src="{{col_product.featured_image | img_url: '400x'}}" alt="">
        <div class="slide-new alifont_bold">NEW</div>
        <div class="slide-title">{{col_product.title}}</div>
        <div class="slide-price alifont_bold">{{col_product.price | money}}</div>
      </a>
    </div>
    {% endfor %}
  {% endif %}
  </div>
  <div class="collection-footer">
    <div class="footer-show">show <span class="alifont_bold"></span> results</div>
    <div class="footer-more alifont_bold">
      <span>Show more</span>
      <img src="{{'next-bottom.svg' | asset_url}}" />
    </div>
  </div>

</div>
<script>
  var productCount = $('.swiper-slide').length;
  
  if(productCount <= 12) {
  	$('.footer-more').hide();
    $('.footer-show span').html(`${productCount}/${productCount}`);
  } else {
    $('.footer-more').show();
    $('.footer-show span').html(`12/${productCount}`);
    for(let i=12;i<productCount;i++) {
      $('.swiper-slide').eq(i).hide();
    }
  }
  
  // 更多按钮点击事件
  $('.footer-more').on('click', function () {
    $(this).hide();
  	for(let i=12;i<productCount;i++) {
      $('.swiper-slide').eq(i).show();
    }
    $('.footer-show span').html(`${productCount}/${productCount}`);
  });
  
</script>

{% schema %} 
{
  "name": "搜索-产品",
  "class":"section-collection",
  "settings": [
    {
      "type": "text",
      "id": "title_text",
      "label": "模块标题",
      "default": "New products"
    },
    {
      "type": "collection",
      "id": "list_collection",
      "label": "产品集合"
    }
  ]
}
{% endschema %}