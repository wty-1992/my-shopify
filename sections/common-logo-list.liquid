    .collection-banner.collection-banner-two .collection-banner-row:after{
      content: "";
      display: block;
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      background: linear-gradient(to bottom, rgba(255,0,0,0), rgb(0 0 0));
      opacity: 0;
      pointer-events: none;
      transition: all .3s;
    }
    .collection-banner.collection-banner-two .collection-banner-row:hover::after{
