<style>
  
  .banner_title{
    text-align: center;
    padding-bottom: 50px;
    position: relative;
  }
  .banner_title span{
    position: relative;
    padding: 0;
    color: #000;
    font-weight: 200;
    display: inline-block;
    font-size: 42px;
    font-family: 'OpenSans-Light';
    padding-bottom: 0px;
    line-height: 80px;
    text-transform: capitalize;
  }
  .collection-banner-pc{display:block;margin: auto;}
  .collection-banner-mb{display:none;margin: auto;}
  .collection-banner{
    display: flex;
    justify-content: space-between;
    align-items: center;
/*     margin-bottom: 16px; */
    flex-flow: wrap;  
  }
  
  .collection-banner .collection-banner-row{
    position: relative;
    overflow: hidden;
  }
  .collection-banner.collection-banner-two,.collection-banner.collection-banner-three,.collection-banner.collection-banner-four{
    width:100%;
    max-width: 1240px;
    margin-left: auto;
    margin-right: auto;
  }
  .collection-banner .collection-banner-row .homeblackoff{
    width: auto;
    top: 0;
    left: 30px;
    display: inherit;
    position: absolute;
    z-index: 1;
  }
  .h-b-txt.last{
    pointer-events: none;
    position: absolute;
    top: 0;
    display: flex;
    width: 100%;
    height: 100%;
    text-align: center;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .h-b-txt.last .h-classify-id{
z-index: 1;
    display: block;
    margin-bottom: 14px;
    color: #050100;
    font-size: 32px;
    font-family: OpenSans-Light;
  }
  .collection-banner .collection-banner-row a:hover{box-shadow: 1px 2px 9pt 3px #c8c8c8;}
  .collection-banner .collection-banner-row a:hover img{-webkit-transform: scale(1.1);transform: scale(1.1);}
  .collection-banner.collection-banner-two:nth-child(3) .collection-banner-row:nth-child(1){overflow: hidden;border-radius: 10px;}
  .collection-banner.collection-banner-two:nth-child(3) .collection-banner-row:nth-child(2){overflow: hidden;border-radius:10px;}
  .collection-banner.collection-banner-two:nth-child(5) .collection-banner-row:nth-child(1){overflow: hidden;border-radius: 10px;}
  .collection-banner.collection-banner-two:nth-child(5) .collection-banner-row:nth-child(2){overflow: hidden;border-radius: 10px;}
  .collection-banner.collection-banner-two .collection-banner-row:nth-child(2) .homeblackoff{left: inherit;right: 22px;}  
  .collection-banner.collection-banner-two:nth-child(3) .collection-banner-row:nth-child(1){width: 62.2%;}
  .collection-banner.collection-banner-two:nth-child(3) .collection-banner-row:nth-child(2){width:36.8%;}
  .collection-banner.collection-banner-two:nth-child(4) .collection-banner-row:nth-child(1){width: 36.8%;}
  .collection-banner.collection-banner-two:nth-child(4) .collection-banner-row:nth-child(2){width: 62.2%;}
    .collection-banner.collection-banner-two:nth-child(5) .collection-banner-row:nth-child(1){width: 62.2%;}
  .collection-banner.collection-banner-two:nth-child(5) .collection-banner-row:nth-child(2){width: 36.8%;}
  .collection-banner.collection-banner-one{margin-top:50px;}
  

  .collection-banner.collection-banner-two .collection-banner-row{width:calc(50% - 8px); border-radius: 10px;}
  .collection-banner.collection-banner-three .collection-banner-row{width:calc(33% - 8px);}
  .collection-banner.collection-banner-four .collection-banner-row{width:calc(25% - 10px);}
  .collection-banner .collection-banner-row a img{width:100%;transition: all .5s;}  
  @media(min-width:1200px){
    .collection-banner.collection-banner-two{
      padding: 6px 20px;
    }
    .collection-banner.collection-banner-two .h-b-txt.last .h-classify-id{
/*       text-shadow: 0 1px 1pc rgba(0,0,0,.4) */
    }
    
    
    
   
