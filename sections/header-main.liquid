<style>
.tingle-modal-box__page{width:100%;}
.site-header .header-cart-sections .login{ 
  cursor: pointer;
}
.site-header>div:nth-child(3) .cart {
  position: relative;
  padding-right: .5rem;
  cursor: pointer;
}
.shopify-section.sticky-header{
  height: 47px;
}
#shopify-section-menu.sticky-header .pclogo{
  display:block;
}
.site-header-sections .site-header{ 
  transition: all .2s ease-in-out 0s;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 1.2rem; 
  width: 100%;
  height: 5rem;
  background: #fff;
  z-index: 10;
}
.site-header-sections .site-header .logo {text-align:center}
.site-header-sections .site-header .logo img {
  width:85%;
}
@media(min-width:768px){ 
  
.header-cart-sections span.icon{
  font-size: 22px;
  color: #000;
  cursor: pointer;
}
.header-cart-sections span.icon.photo-cart{
  font-size: 19px;
  transform: translateY(-1px);
}
.header-cart-sections span.small--hide{
  font-size: 12px;
  transform: translateY(1px);
  display: inline-block;
  color: #000;
}
#shopify-section-header{
  height:auto;
}  
.site-header-sections .site-header .logo img {
  width: 100%;

  image-rendering: pixelated;
}
.site-header-sections .site-header{  
  height:6.4rem; 
  margin:25px auto 15px; 
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 1.2rem;
  background: #fff;
  position: relative;
} 
.site-header-sections .header-mb-nav i, 
.site-header-sections .header-cart-sections i{
  font-size:1.5rem;
}
.site-header-sections  .commonlogo{
  left: 50%;
  position: absolute;
  transform: translateX(-50%);
} 
 
}

</style>


