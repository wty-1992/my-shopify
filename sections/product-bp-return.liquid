.days-return {
  font-size: 13px;
  color: #333;
  line-height: 1.4; 
  padding: 0 55px 20px;
  clear:both;
  text-align:center;
}
.days-return .container {
  width: 100%; 
  padding: 20px 0; 
}
.days-return-title {
  text-align: center;
  padding: 0;
  font-size: 24px;
}
.days-return-container {
  margin-top: 2rem;
}
.days-return-container h3 {
  color: #333;
  font-size: 15px;
  font-weight: 600;
}
.teshu {
  font-size: 15px;
  font-weight: 600;
  color: #e60044;
  text-decoration: underline;
}
.subtitle {
  display: block;
  font-size: 13px;
  color: #777;
  font-weight: 100;
  margin-bottom: 10px;
  padding: 15px 0 0;
}
.dot {
  width: 4px;
  height: 4px;
  background: #888;
  display: inline-block;
