      "default": "home-talk-sales"
    },
    {
      "type": "text",
      "id": "inquiry",
      "label": "询问内容"
    },
    {
      "type": "text",
      "id": "skip-text",
      "label": "跳转文案"
    },
    {
      "type": "text",
      "id": "link",
      "label": "跳转链接"
    },
    {
      "type": "image_picker",
      "id": "pc_img",
      "label": "PC图片"
    },
    {
      "type": "image_picker",
      "id": "mb_img",
      "label": "MB图片"
    }
  ],
  "presets": [
    {
      "name": "首页 联系客服",
      "category": "Custom"
    }
  ]
}
