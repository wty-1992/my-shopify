  .pages-coupon-banner-pc{display:none;}
  .pages-coupon-banner-mb{display:block;}
}
#banner_text{
  width:55%;
  margin: 0 auto;
  list-style: none;    
  padding: 10px;
  text-align: center;
  font-size: 30px;
  min-width:1080px;   
}
#banner_text li{ 
  line-height: unset;
  margin:10px;
}
#banner_text .banner_firKid{
  font-size: 42px;
  letter-spacing: 6px;
  line-height: unset;
}
.banner_text .banner_firKid span{letter-spacing: -4px;}
.banner_text .banner_fouKid span{padding: 5px 15px;border-radius: 20px;font-weight: 600;letter-spacing: 1px;}
#banner_text .banner_font_size{font-size:16px;}
.banner_discount .banner_secKid,.banner_discount .banner_fouKid span{letter-spacing: 5px;}
/* 满减 */
#banner_theme{
  width:60%;
  margin: 0 auto;    
  padding: 10px;
  text-align: center;
  font-size: 30px;
  min-width: 750px;
}
.banner_theme{font-size: 42px;}
#banner_theme .banner_kid_theme{font-size: 16px;}
#banner_theme .banner_kid_last{font-size: 22px;}
#banner_theme .banner_ul_box{width:31%;display:inline-block;list-style: none;margin: 0;padding: 0;}
#banner_theme .banner_ul_box li{margin:10px 0;}
#banner_theme .banner_ul_box li:first-child{line-height: unset;}
.cms-coupons{display:none;}
.edm-jg{
  top: 60px;
  pointer-events: none;
  display: none;
  padding: 25px;
  width: 100%;
  text-align: center;
  font-size: 16px;
  color: #fff;
  background: #000;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  opacity: 0;
  transition: all .7s .2s cubic-bezier(0.435, 0.080, 0.080, 1.000);
}
@media(max-width:640px){
  .cms-coupons{
    display:block;
    background: #fff;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 5px 0 5px 0;
    z-index: 8;
    position: relative;
    text-align: center;
    box-shadow: 0 0 4px rgba(0,0,0,.1);
    -webkit-box-shadow: 0 0 4px rgba(0,0,0,.1);
    -moz-box-shadow: 0 0 4px rgba(0,0,0,.1);
  }
  .cms-coupons .emailbtn{
    padding: 0;
    border: none;
    font-size: 18px;
    color: #000;
    text-transform: uppercase;
    border-radius: 50px;
    font-weight: 600;
    background: transparent;
  }
  .cms-coupons .emailbtn span{
    text-decoration: underline;
  }

  .edm-jg.active{
    opacity: 1;
    top: 0;
    display: inline-block;
  }
  .cms-coupons p{
    font-weight: 400;
    margin: 0px 0 5px;
    text-align: center;
    color: #0e2c4e;
    text-transform: uppercase;
    font-size: 12px;
  }
  #banner_text{
    min-width: 100%;
  }
  #banner_text{
    font-size: 15px;
    min-width: 100%;
    padding-bottom: 20px;
  } 
  #banner_text .banner_firKid{
    font-size:24px;
    letter-spacing: 6px;
    line-height: unset;
  }
  #banner_text .banner_font_size {
    font-size: 10px;
  }
  #banner_text .banner_fouKid{display:none;}

  /* 满减 */
  #banner_theme{min-width: 100%;}
  #banner_theme .banner_ul_box li:first-child {
    line-height: unset;
    font-size: 15px;
  }
  #banner_theme .banner_kid_last {
    font-size: 10px;
  }
  .banner_theme {
    font-size: 30px;
  }   
}
@media(max-width:320px){   
