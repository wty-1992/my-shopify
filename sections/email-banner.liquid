{% for block in section.blocks %}
{% if block.type == 'text1' %}
{% if handle == block.settings.handle %}
<style>
  .banner_bg_clolr{
    background:{{ block.settings.style }};
    background:-webkit-{{ block.settings.style }};
    color: {{ block.settings.style_color }};
  }
  {{ block.settings.style_html }}
  @media(max-width:768px){

  }
</style>
<div class="banner_bg_clolr">
  <!-- 第一套 特价  -->
  <ul class="banner_sale banner_text" id="banner_text">
    <li class="banner_firKid"><span>{{ block.settings.text1 }}</span></li>
    <li class="banner_secKid">{{ block.settings.text2 }}</li>
    <li class="banner_thiKid">{{ block.settings.text3 }}</li>
    <li class="banner_fouKid banner_font_size"><span>{{ block.settings.text4 }}</span></li>
    <li class="banner_fifKid banner_font_size">{{ block.settings.text5 }}</li>
  </ul>
</div>
<div id="myReport" class="edm-jg"></div>
<div class="cms-coupons">
    <!-- 1. Define some markup --> 
    <button class="emailbtn">{{ section.settings.code_btn }} <span>{{ block.settings.code }}</span></button>
    <p>{{ section.settings.code_text }}</p>       
    <!-- 2. Include library -->
    {{ 'clipboard.min.js'  | asset_url | script_tag }}
    <!-- 3. Instantiate clipboard -->
    <script>
    var clipboard = new Clipboard('.emailbtn',{
        text: function(){
            return '{{ block.settings.code }}';
        }
    });
    clipboard.on('success', function(e){
        if (jQuery.cookie('myReport')){
            jQuery("#myReport").html("{{ section.settings.code_hint }}");
        }
        var cookietime = new Date();
        cookietime.setTime(cookietime.getTime() + (2 * 60 * 60 * 1000));
        jQuery.cookie('myReport','1',{path:'/', expires:cookietime});
        jQuery("#myReport").addClass("active");
        setTimeout("jQuery('#myReport').removeClass('active');",3000);
    });
    clipboard.on('error', function(e){
        console.log(e);
    });
    </script>
</div>
{% endif%}
