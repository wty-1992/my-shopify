if($(".top-nav-slide-two").length>0){
  $(".activity-template-collection").hide();
  jQuery(function(){
    $('.direction-shade .m-top-nav-slide:eq(0)').addClass('active')
    $(window).scroll(function(event){
      let originTop = $(window).width()>768?$(window).scrollTop()+$('.menu-nav.small--hide').height():$(window).scrollTop()+$('header.site-header.medium-up--hide').height();      
      $('.section-position').each(function(){

        if (jQuery(this).offset().top - originTop <= 1 && jQuery(this).offset().top - originTop + jQuery(this).parent().height() > 0){
          var oid = "#" + jQuery(this).attr("id");
          $(".swiper-slide.m-top-nav-slide").removeClass("active");
          $(".drawernav-item").removeClass("open");
          jQuery("a[href='"+oid+"']").parent().parent(".drawernav-item").addClass("open")
          jQuery("a[href='"+oid+"']").parent().addClass("active");
        }  	
      })
      productImageFixed();
    })
    if(jQuery('.m-top-nav-slide').length > 1){
      jQuery('.m-top-nav').addClass("open");
    }
  });

  function productImageFixed(){
    var scrollTop = jQuery(window).scrollTop();
    var container = $('.activity-template-collection-nav');//容器元素
    var fixedEl = $('.activity-template-collection-nav .view-count-down');//定位元素
    var head = $(window).width()>768?$('.menu-nav.small--hide'):$('header.site-header.medium-up--hide');
    var fixedTop = head.height();
    if(( (container.offset().top - fixedTop) - scrollTop) < 0){
        if((container.offset().top + container.height() - fixedEl.height() - fixedTop ) < scrollTop ){
            fixedEl.css({"position":"absolute","top":"unset","bottom":"0"});
            fixedEl.removeClass("stick-sub");
        }else{  
            fixedEl.css({"position":"fixed","top":fixedTop,"bottom":"unset"});        
            fixedEl.addClass("stick-sub");
        };
    }else{
        fixedEl.css({"position":"unset"});
        fixedEl.removeClass("stick-sub");
    };
  };  
}  
</script>
