<style>
.activity-template-collection-nav {
  padding-top: 15px;
}
.shopify-section.activity-template-collection-nav {
  display: flex;
  max-width: 1200px;
  margin: auto;
  justify-content: center;
  position: relative;
}  
.m-top-nav.open, .m-top-nav {
  width: 23%;
  position: relative;
}
.m-top-nav .view-count-down {
  overflow: hidden;
  padding:15px 0;
  width: 100%;  
  background: #f5f5f5;  
  max-height: 70vh;
}
.m-top-nav .view-count-down .active-top {
  display: flex;
  margin: 0 auto;
  flex-direction: column;
  flex-wrap: wrap;
  height: 100%; 
}
.direction-shade{
  height: 100%;
  overflow: hidden;
  width: 100%;
}
.view-count-down.stick-sub {
  position: fixed;
  top: 0;
  z-index: 9;
  width: calc(1220px / 4.5);
  padding-top: 10px;
}
.direction-shade .swiper-wrapper1{
  display: flex;
  height: 100%;
  overflow: auto;
  overflow-x: hidden;
  flex-flow: column;
  max-height: 70vh;
  padding-left: 35px;
}
.direction-shade .swiper-wrapper1 .slide-item-title{
  font-size: 22px;
  font-weight: 900;
}
.direction-shade .swiper-wrapper1 .swiper-slide.slide-item-title a{  
  flex-flow: row-reverse;
  justify-content: flex-end;
}
.direction-shade .swiper-wrapper1 .swiper-slide.slide-item-title{
  height:50px;
}
.direction-shade .swiper-wrapper1 .swiper-slide {
  display: flex;
  align-items: center;
  justify-content: end;
  padding: 0;
  width: calc(100% - 8px);
  height:38px;
  margin-bottom:15px;
}
.direction-shade .swiper-wrapper1 .swiper-slide a{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: left;
  align-items: center;
}
.active-right-list {
  width: 77%;
}  
.direction-shade .swiper-wrapper1 .swiper-slide img{
  width: 30px;
}
.drawernav-item {
  margin-bottom: 15px;
}
span.nav-icon:after{
  content:"";
  width: 30px;
  height: 30px;
  display: inline-block;
  background-size: cover;
}
.direction-shade .swiper-wrapper1 .swiper-slide span{
  vertical-align: middle;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.block-collection{
  position: relative;
}
.tittle_more {
  margin-top: 15px;
  text-align: center;
  margin-bottom: 60px;
}
.no-js .product-card__image.js{
  display:block;
}
.tittle_more a{    
  border-radius: 35px;
  text-transform: uppercase;
  font-size: 14px;
  padding: 10px 40px;
  display: inline-block;
}  
.section-position {
  position: absolute;
  top: -60px;
}
.block-collection .title {
  text-align: center;
  letter-spacing: 0;
  padding: 3rem 0 0 0;
  font-family: OpenSans;
  font-size: 30px;
  margin-bottom: 15px;
  line-height: 1;
}
.item-1-text {
  font-size: 22px;
  font-weight: 900;
  color: #000;
  margin-bottom: 16px;
  display: block;
  line-height: 1;
}
