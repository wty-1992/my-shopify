<style>
    .site-footer {
    background-color:#F6F6F9;
    color: #000;
    margin-top:0px;
    padding:0px;
  }
  .site-footer a {
    color: #000;
  }
  .footer-text{
    width:100%;
    font-size:14px;
    line-height:70px;
    text-align:center;
  }
.site-footer a {
    color: #000;
}
footer a:not([href]):not([tabindex]):focus,footer a:not([href]):not([tabindex]):hover{
  color: rgb(230, 0, 68);
}


@media(max-width:640px){
  .site-footer{
    padding:20px;
    margin-top:0px;
  }
  .footer-text{
    font-size：12px;
    line-height:56px;
  }
</style>


<footer class="site-footer"> 
  {% include 'footer-pc'%}
  {% include 'footer-mb'%}
