      {
        "type": "paragraph",
        "content": "home-shopinstagram"
      },
      {
	    "type": "checkbox",
        "id": "enable",
        "label": "开启",
        "default": true
      }

    ],
    "presets": [
      {
        "name": "通用 - shopinstargram ( Swiper )",
        "category": "通用"
      }
    ]
  }
