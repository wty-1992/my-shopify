{% for block in section.blocks %}
  {% if handle == block.settings.handle %}
    <style>
      .blackfriday-time,.direction-top-nav{
        background: {{block.settings.nav_bg}};
      }
      .itext,.blackfriday-time .icon,.blackfriday-time ul li span.num,.blackfriday-time ul li span{
        color: {{block.settings.nav_text}};
      }
      .swiper-slide.m-top-nav-slide.active,.swiper-slide.m-top-nav-slide:hover{
      	background: {{block.settings.nav_hover_bg}};
	  }
      .swiper-slide.m-top-nav-slide.active .itext,.swiper-slide.m-top-nav-slide:hover .itext{
        color: {{block.settings.nav_hover_text}};
      }
      main.main-content .activity-template-collection{
        background:{{ block.settings.page_bg }};
        {% if block.settings.pc_bg %}
        background: url("{{ block.settings.pc_bg | img_url: 'master' }}") 0% 60px/contain;          
        {% endif %}
        background-repeat: repeat-y;
      }      
      {%if page.handle=="2021-mothers-day-gifts"%}
      main.main-content .activity-template-collection{
        background-repeat: no-repeat;
      }
      {% endif %}
      {%if page.handle=="2021-fathers-day-sale"%}
       main.main-content .activity-template-collection{
        background:{{ block.settings.page_bg }};
        {% if block.settings.pc_bg %}
        background: url("{{ block.settings.pc_bg | img_url: 'master' }}") 0% 9%/contain;          
        {% endif %}
        background-repeat: repeat-y;
      }
      {%endif%}
       {%if page.handle=="happy-easter-day-sale"%}
       main.main-content .activity-template-collection{
        background:{{ block.settings.page_bg }};
        {% if block.settings.pc_bg %}
        background: url("{{ block.settings.pc_bg | img_url: 'master' }}") 0% 14.5%/contain;          
        {% endif %}
        background-repeat: repeat-y;
      }
      {%endif%}
      {% if block.settings.title_icon %}
      .block-collection .title span{
        position: relative;
      }      
      .block-collection .title span:before,.block-collection .title span:after{
        content: "";
        display: block;
        width: 32px;
        height: 69px;
        position: absolute;
        background: url("{{ block.settings.title_icon | img_url: 'master' }}") no-repeat;
        background-size: contain;
        top: -24px;
      }
      .block-collection .title span:before{
        left: -52px;
      }
      .block-collection .title span:after{
        right: -52px;
      }
      {% endif %}
      @media(max-width:768px){
        .block-collection .title span:before, .block-collection .title span:after{
          width: 22px;
          top: -16px;
          height: 48px;
        }
        .block-collection .title span:before{
          left: -35px;
        }
        .block-collection .title span:after{
          right: -35px;
        }
        main.main-content{
          {% if block.settings.mb_bg %}
          background: url("{{ block.settings.mb_bg | img_url: 'master' }}") 0% 35px/contain {{ block.settings.page_bg }};
          {% endif %}
        }
        .view-place-top{
          background: {{block.settings.nav_countdown_mb_bg}};
        }
      }
      /*会场样式*/
      .block-collection .uldiv{
        background:{{ block.settings.color_bg }};
      }
      .block-collection .title{
        color:{{block.settings.color_title}};
      }
      .block-collection .sub_title{
        color:{{block.settings.color_titlesub}};
      }
      .block-collection .product-card__name,.block-collection .item a{
        color:{{block.settings.color_text}};
      }  
      .block-collection .product-card__sale-price{
        color:{{block.settings.color_price}};
      }
      .block-collection .product-card__regular-price{
        color:{{block.settings.color_priceregular}};
      }
      .block-collection .collection-label span{
        background:{{block.settings.color_label_bg}};
        color:{{block.settings.color_label_color}};
        border:1px solid {{block.settings.color_label_border}};
      }
    </style>
  {% endif%}
{% endfor %}

