<style>
/* PC端样式 */
.connect_setp_component{
  padding: 25px;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  color: rgba(146,143,165,0.5);
}
.csc_item{
  display: flex;
  width: 250px;
  flex-direction: column;
  align-items: center;
}
.csci_number{
  background: rgba(146,143,165,0.5);
  border-radius: 50%;
  width: 32px;
  height: 32px;
  text-align: center;
  line-height: 32px;
  font-size: 16px;
  color: #fff;
  position: relative;
}
.csci_number::before{
  position: absolute;
  content: '';
  width: 210px;
  border-top: 2px dotted rgba(146,143,165,0.5);
  left: -214px;
  top: 50%;
  transform: translateY(-50%);
}
.csci_close_line::before{
  content: none;
}
.csci_text{
  padding-top: 5px;
  font-size: 14px;
}

/* 选中状态样式 */
.csc_item_select > .csci_number{
  background: #222;
}
.csc_item_select > .csci_number::before{
  border-top-color: #222;
}
.csc_item_select > .csci_text{
  color: #222;
}
</style>

<div class="connect_setp_component alifont_bold">
  <div class="csc_item csc_item_select">
    <div class="csci_number csci_close_line">1</div>
    <div class="csci_text">Connect Shopify</div>
  </div>
  <div class="csc_item">
    <div class="csci_number">2</div>
    <div class="csci_text">Add URL</div>
  </div>
  <div class="csc_item">
    <div class="csci_number">3</div>
    <div class="csci_text">Got your Spotify dashboard</div>
  </div>
</div>

<script>
/* 步骤进一 */
const furtherStep = (() => {
  let stepNumber = 1;
  return () => {
    $('.csc_item')[stepNumber].classList.add('csc_item_select');
    stepNumber++;
  };
})()
</script>