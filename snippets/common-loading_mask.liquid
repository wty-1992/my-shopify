<style>
  .loading-mask{
    display:none;
    font-size: 1.1em;
    position: fixed;
    text-align: center;
    z-index: 9999999999;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
  }
  .loading-mask .loading-mask__background{
    width: 100%;
    height: 100%;
    position: absolute;
    background: #fff;
    opacity: .5;
    left: 0;
    top: 0;
  }
  .loading-mask .loading-mask__loader{
    left: 50%;
    margin-left: -38px;
    margin-top: -22px;
    padding: 6px 0;
    position: absolute;
    text-align: center;
    top: 50%;
    width: 44px;
    height: 44px;
    z-index: 1000;
    font-size: 16px;
    font-weight: normal;
    background-color: transparent;
  }
  .loading-mask .loading-mask__loader i {
    background: url({{'loading-heart.gif' | asset_url}}) no-repeat scroll 0 0;
    width: 75px;
    height: 35px;
    display: inline-block;
  }
  .loading-mask-show{display:block !important;}
</style>
<div class="loading-mask">
  <div class="loading-mask__background"></div>
  <p class="loading-mask__loader">
    <i></i>
  </p>
  <script>
    function loadingmask(){
      var _this = this;
      this.show = function(){
        console.log('show', new Date().getTime())

        $('.loading-mask').addClass('loading-mask-show');
        $('html').css('overflow', 'hidden');
        return _this;
      }
      this.hide = function(){
        console.log('hide', new Date().getTime())
        $('.loading-mask').removeClass('loading-mask-show');
        $('html').css('overflow', '');
        return _this;
      }
      this.bgcolor = function (color){
        $('.loading-mask__background').css('background-color', color);
        return _this;
      }
    }
    var LOADINGMASK = new loadingmask();
  </script>
</div>
