    $(function(){
      $(".bc-sf-filter-block-content").addClass("div_hide");
        $("#bc-sf-filter-top-sorting").on('click', '.bc-sf-filter-block-title', function(){
            if ($(this).find('span').hasClass('up')){
                $(this).find('span').removeClass('up');
                $(this).next('.bc-sf-filter-block-content').slideDown();
            }else{
                $(this).find('span').addClass('up');
                $(this).next('.bc-sf-filter-block-content').slideUp();
            }
        });
        
    })
