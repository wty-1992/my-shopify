{% endcomment %}

<style>
.search-container{
  display: none;
}

.article_module_search{
  padding: 20px;
  background: #F6F6F9;
}
.article_search{
  display: flex;
  align-items: center;
  padding: 6px 10px;
  background: #fff;
  box-shadow: 0 1px 1px 0 rgba(106, 102, 136, 0.08), 0 4px 16px 0 rgba(183,183,192,0.3);
  margin-bottom: 20px;
  border-radius: 4px;
}
.article_search img{
  width: 20px;
  height: 20px;
}
.article_search input{
  border: none;
  background: transparent;
}
.article_nav_module{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.article_nav_current{
  color: #222;
}
.detail_module{
  background: #F6F6F9;
}
.detail_title_author{
  padding: 20px;
  padding-bottom: 80px;
  color: #222;
}
.article_detail_title{
  margin-top: 40px;
  font-size: 24px;
  line-height: 32px;
  text-align: center;
}
.article_author_time{
  margin: 26px;
  text-align: center;
  font-size: 12px;
  line-height: 24px;
}
.article_time{
  color: #928FA5;
}

.detail_ima_module{
  padding: 0 20px;
  position: relative;
  top: -80px;
}
.detail_img{
  border-radius: 4px;
  overflow: hidden;
}
.detail_ima_module img{
  width: 100%;
}

.detail_content{
  margin-top: -20px;
  margin-bottom: 80px;
  padding: 0 20px;
  font-size: 16px;
  line-height: 36px;
  color: #222;
}

@media screen and (max-width: 749px){
  .detail_img{
    max-height: 160px;
  }
}

/* PC端样式 */
@media screen and (min-width: 750px){
  .article_module_search{
    padding-top: 60px;
  }
  .article_search,
  .article_nav_module{
    max-width: 1200px;
    margin: 0 auto;
  }
  .article_search{
    padding: 8px 30px;
    margin-bottom: 10px;
  }
  .article_nav_last{
    cursor: pointer;
  }

  .detail_title_author,
  .detail_ima_module,
  .detail_content{
    max-width: 1022px;
    margin: 0 auto;
  }

  .detail_img{
    max-height: 320px;
  }

  .detail_content{
    margin-top: -20px;
    margin-bottom: 80px;
  }
}
</style>

{% comment %} 顶部搜索模块 {% endcomment %}
<div class="article_module_search mm-header-height">
  {% comment %} 模块搜索框 {% endcomment %}
  <div class="article_search">
    <img src="{{ 'search.svg' | asset_url }}" alt="serach">
    <input
      type="text"
      placeholder="Search for articles"
      id="searchInput"
      value=""/>
  </div>
  {% comment %} 导航条模块 {% endcomment %}
  <div class="article_nav_module">
    <span id="article_nav_last" class="article_nav_last">Help Center</span>
    <span class="article_nav_current">/ Choose the Sustainable Option with Mademine Option with Mademine</span>
  </div>
</div>

{% comment %} 文章标题/作者 {% endcomment %}
<div class="detail_module">
  <div class="detail_title_author">
    <div class="article_detail_title">Enjoy Mademine services in 4 easy steps</div>
    <div class="article_author_time">
        <span class="article_author">Liz Ortner, </span>
        <span class="article_time">Updated yesterday</span>
      </div>
  </div>
</div>

{% comment %} 文章图片 {% endcomment %}
<div class="detail_ima_module">
  <div class="detail_img">
    <img src="https://cdn.shopify.com/s/files/1/0372/6897/9848/products/B_400x.jpg?v=1588056625" alt="">
  </div>
</div>

{% comment %} 文字内容模块 {% endcomment %}
